{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "strict": true,
  "include": ["src/*"],
  "exclude": [
      "node_modules",
      "test",
      "config",
      "coverage",
      "utils"
    ]
}